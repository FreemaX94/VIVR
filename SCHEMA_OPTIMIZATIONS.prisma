// OPTIMIZED PRISMA SCHEMA
// This file shows the recommended changes to the existing schema.prisma
// Apply these changes incrementally and create migrations for each one

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String?
  image         String?
  orders        Order[]
  reviews       Review[]
  wishlist      Wishlist[]
  addresses     Address[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Add: Index for user listings and sorting
  @@index([createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id            String      @id @default(cuid())
  name          String
  slug          String      @unique
  description   String      @db.Text
  price         Decimal     @db.Decimal(12, 2)  // CHANGED: From Decimal(10,2) to Decimal(12,2) for better precision
  comparePrice  Decimal?    @db.Decimal(12, 2) // CHANGED: From Decimal(10,2) to Decimal(12,2)
  cost          Decimal?    @db.Decimal(12, 2) // NEW: For cost tracking
  images        String[]
  category      Category    @relation(fields: [categoryId], references: [id])
  categoryId    String
  stock         Int         @default(0)
  reviews       Review[]
  wishlist      Wishlist[]
  orderItems    OrderItem[]
  featured      Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // CHANGED: Removed @@index([slug]) - @unique already indexes
  // CHANGED: Removed @@index([featured]) - Low cardinality, wastes space

  // NEW: Composite index for category + featured browsing
  @@index([categoryId, featured])

  // NEW: Index for sorting by creation date
  @@index([createdAt])

  // NEW: Index for low-stock queries
  @@index([stock])
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Note: @unique already creates index, but keeping explicit index for safety
  @@index([slug])
}

model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  items         OrderItem[]
  subtotal      Decimal     @db.Decimal(12, 2)  // CHANGED: From Decimal(10,2) to Decimal(12,2)
  shipping      Decimal     @db.Decimal(12, 2) @default(0)  // CHANGED: From Decimal(10,2) to Decimal(12,2)
  tax           Decimal     @db.Decimal(12, 2) @default(0)  // NEW: Tax tracking
  discount      Decimal     @db.Decimal(12, 2) @default(0)  // NEW: Discount tracking
  total         Decimal     @db.Decimal(12, 2)  // CHANGED: From Decimal(10,2) to Decimal(12,2)
  status        OrderStatus @default(PENDING)
  paymentMethod String
  paymentId     String?
  currency      String      @default("EUR")  // NEW: Currency support
  address       Json
  notes         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // CHANGED: Removed redundant @@index([orderNumber]) - @unique already indexes

  @@index([userId])
  @@index([status])

  // NEW: Composite index for user's recent orders (very common query)
  @@index([userId, createdAt])

  // NEW: Index for status-based filtering
  @@index([status, createdAt])

  // NEW: Index for payment reconciliation
  @@index([paymentId])

  // NEW: Index for payment method analytics
  @@index([paymentMethod])
}

model OrderItem {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  name      String
  price     Decimal  @db.Decimal(12, 2)  // CHANGED: From Decimal(10,2) to Decimal(12,2)
  quantity  Int
  discount  Decimal  @db.Decimal(12, 2) @default(0)  // NEW: Item-level discount
  image     String?

  @@index([orderId])
  @@index([productId])
}

model Review {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  rating    Int
  title     String?
  comment   String?  @db.Text
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId])

  // CHANGED: Removed @@index([rating]) - Inefficient for low-cardinality column

  // NEW: Composite index for product reviews with verification status
  @@index([productId, verified])

  // NEW: Index for user profile reviews and sorting
  @@index([userId, createdAt])
}

model Wishlist {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())

  @@unique([userId, productId])

  // CHANGED: Improved index to support sorting
  @@index([userId, createdAt])
}

model Address {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  label      String?
  firstName  String
  lastName   String
  street     String
  apartment  String?
  city       String
  postalCode String
  country    String   @default("France")
  phone      String?
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
}

model Newsletter {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

enum OrderStatus {
  PENDING
  PROCESSING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}
